@model GenreDTO
@{
    Layout = "_AdminLayout";
}

@* Html.ValidationSummery() *@
<div class="nav-custom mb-4 py-2 d-flex justify-content-between align-items-center">
    <h2 class="px-3 pt-2">
        Update Genre
    </h2>
    <a asp-action="Index" asp-controller="Genre" class="btn btn-primary me-3">Back</a>
</div>
<div class="nav-custom mb-4 px-3 py-4">
    <div style="width: 50%">
        <form asp-action="UpdateGenre">
            <input type="hidden" asp-for="Id" />

            <div class="my-2">
                <label>Genre</label>
                <input type="text" class="form-control" asp-for="GenreName" />
                <span asp-validation-for="GenreName" class="text-danger"></span>
            </div>

            <div class="my-2">
                <button type="submit" class="btn btn-info">Update</button>
            </div>
        </form>
    </div>
</div>
