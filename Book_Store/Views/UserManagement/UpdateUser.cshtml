@model EditUserDTO
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdateUser";
}

<div class="container my-4">
    <div class="nav-custom mb-4 py-2 d-flex justify-content-between align-items-center">
        <h2 class="px-3 pt-2">Update User</h2>
        <a asp-action="Index" class="btn btn-primary me-3"><i class="bi bi-arrow-left"></i> Back</a>
    </div>

    <div class="nav-custom mb-4 px-3 py-4">
        <div class="card-body">
            <form asp-action="UpdateUser" method="post">
                <input type="hidden" asp-for="UserId" />

                <!-- User Name -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold">User Name *</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold">Email *</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-bold">Role *</label>
                    <select asp-for="Role" class="form-control" asp-items="@(new SelectList(ViewBag.Roles))">
                        <option value="">Select a role</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-info">Update User</button>
                </div>
            </form>
        </div>
    </div>
</div>