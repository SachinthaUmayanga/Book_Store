<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Book Store</title>
    <link href="\css\bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg bg-primary fixed-top" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">BookStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        @* <a class="nav-link active" href="/Home/Index">Home</a> *@
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/Home/Index">Home</a>
                    </li>
                     @* <li class="nav-item">
                         <a class="nav-link" href="/Home/Privacy">Privacy</a> 
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Privacy" ? "active" : "")" href="/Home/Privacy">Privacy</a>
                    </li> *@
                    <li class="nav-item">
                        @* <a class="nav-link" href="/Home/About">Avout</a> *@
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active" : "")" href="/Home/About">About</a>
                    </li>
                    @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                       <li class="nav-item">
                            <a class="nav-link" href="/AdminOperations/Dashboard">Dashboard</a>
                       </li>
                    }
        
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <div class="container" style="padding-top: 80px">
        <div class="my-2">
            <partial name="_Notification" />
        </div>
        @RenderBody()
    </div>

    <!-- Footer -->
    @* <footer class="text-center text-lg-start text-white" style="background-color: #1c2331;"> *@
    <footer class="footer footer-expand-lg bg-secondary mt-5" data-bs-theme="dark">
        <!-- Section: Social media -->
        <section class="d-flex justify-content-between p-4 bg-primary">
            <!-- Left -->
            <div class="me-4 text-white">
                <span>Get connected with us on social networks:</span>
            </div>
            <!-- Right -->
            <div>
                <a href="#" target="_blank" class="text-white me-4">
                    <i class="bi bi-facebook fs-4"></i>
                </a>
                <a href="#" target="_blank" class="text-white me-4">
                    <i class="bi bi-twitter fs-4"></i>
                </a>
                <a href="#" target="_blank" class="text-white me-4">
                    <i class="bi bi-instagram fs-4"></i>
                </a>
                <a href="#" target="_blank" class="text-white me-4">
                    <i class="bi bi-linkedin fs-4"></i> 
                </a>
                <a href="#" target="_blank" class="text-white me-4">
                    <i class="bi bi-github fs-4"></i>
                </a>
            </div>
        </section>
        <!-- Section: Social media -->
        <!-- Section: Links  -->
        <section>
            <div class="container text-center text-md-start mt-5">
                <div class="row mt-3">
                    <!-- Company name -->
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold">Company Name</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #ffc107; height: 2px;" />
                        <p>
                            We provide a seamless platform for managing and reserving e-books, enhancing accessibility and convenience for readers.
                        </p>
                    </div>

                    <!-- Products -->
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold">Products</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #ffc107; height: 2px;" />
                        <p><a href="#!" class="text-black text-decoration-none">E-Books</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">Audiobooks</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">Magazines</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">E-Library Access</a></p>
                    </div>

                    <!-- Useful Links -->
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h6 class="text-uppercase fw-bold">Useful Links</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #ffc107; height: 2px;" />
                        <p><a href="#!" class="text-black text-decoration-none">Your Account</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">Affiliate Program</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">Shipping Info</a></p>
                        <p><a href="#!" class="text-black text-decoration-none">Help Center</a></p>
                    </div>

                    <!-- Contact -->
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
                        <h6 class="text-uppercase fw-bold">Contact</h6>
                        <hr class="mb-4 mt-0 d-inline-block mx-auto" style="width: 60px; background-color: #ffc107; height: 2px;" />
                        <p><i class="fas fa-home me-2"></i> 55/1, Galle Road, Sri Lanka</p>
                        <p><i class="fas fa-envelope me-2"></i> info@ebook.com</p>
                        <p><i class="fas fa-phone me-2"></i> +94 912 343 33</p>
                        <p><i class="fas fa-print me-2"></i> +94 111 222 33</p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Section: Links  -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2024 eBook Pvt. Ltd. All Rights Reserved.
        </div>
    </footer>



    
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<script>
    loadCartCount();
    async function loadCartCount() {
        
        try {
            var response = await fetch(`/Cart/GetTotalItemInCart`);
            console.log(response)
            if (response.status == 200) {
                var result = await response.json();
                var cartCountEl = document.getElementById("cartCount");
                cartCountEl.innerHTML = result;
            }
        }
        catch (err) {
            console.log(err);
        }
    }
</script>

</html>



@await RenderSectionAsync("Scripts", required: false)